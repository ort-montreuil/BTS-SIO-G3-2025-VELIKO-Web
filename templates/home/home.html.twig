{% extends "base.html.twig" %}

{% block title %}{{ titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css"/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css"/>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="map-container">
            <div id="map"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin=""></script>
    <script src="https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js"></script>

    <script type="text/javascript">
        var lat = 48.852969;
        var lon = 2.349903;
        var macarte = null;
        var markerClusters;

        var icone = L.icon({
            iconUrl: "{{ asset('image/icons8-localisation-de-l\'utilisateur-100.png') }}",
            iconSize: [50, 50],
            iconAnchor: [25, 50],
            popupAnchor: [0, -50]
        });
        var icone1 = L.icon({
            iconUrl: "{{ asset('image/imageMarker.png_1-removebg-preview.png') }}",
            iconSize: [50, 50],
            iconAnchor: [25, 50],
            popupAnchor: [0, -50]
        });

        function initMap() {
            macarte = L.map('map').setView([lat, lon], 11);
            markerClusters = L.markerClusterGroup();

            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 1,
                maxZoom: 20
            }).addTo(macarte);

            // Géolocalisation de l'utilisateur
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var userLat = position.coords.latitude;
                    var userLon = position.coords.longitude;
                    var userMarker = L.marker([userLat, userLon], {icon: icone}).addTo(macarte);
                    userMarker.bindPopup("Vous êtes ici !");
                }, function (error) {
                    console.log("Erreur lors de la récupération de la position : ", error);
                });
            } else {
                console.log("La géolocalisation n'est pas supportée par ce navigateur.");
            }

            {% for station in stationData %}
            var marker = L.marker([{{ station.lat }}, {{ station.lon }}], {icon: icone1});
            marker.bindPopup("Nom station : {{ station.nom }}" +
                "<br> Nombre de vélos disponibles : {{ station.numBikesAvailable }}" +
                "<br> Vélo Mécanique : {{ station.veloMecanique }}" +
                "<br> Vélo Électrique : {{ station.veloElectrique }}" +
                '{% if app.user %}' +
                '{% if station.id in favoriteStationIds %}' +
                '<form action="{{ path('app_station_delete', {'id': station.id}) }}" method="post">' +
                '<button type="submit">Retirer des favoris</button>' +
                '</form>' +
                '{% else %}' +
                '<form action="{{ path('app_add_favorite', {'id': station.id}) }}" method="post">' +
                '<button type="submit">Ajouter aux favoris</button>' +
                '</form>' +
                '{% endif %}' +
                '{% endif %}');
            markerClusters.addLayer(marker);
            {% endfor %}

            macarte.addLayer(markerClusters);
        }

        window.onload = function () {
            initMap();
        };
    </script>
{% endblock %}
