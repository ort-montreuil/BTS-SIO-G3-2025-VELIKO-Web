{% extends "base.html.twig" %}

{% block title %}{{ titre }}{% endblock %}

{% block content %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        #entete {

            padding: 20px;
            text-align: center;
            color: white;
            border-color: black;
            border-style: solid;
            background-color: white;
            display: block;
            padding-bottom: 10px;
        }

        .liens {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            margin-left: 150px;
        }

        .image {
            width: 55px;
            height: auto;
            padding-bottom: 10px;
        }

        #map {
            height: 584px;
        }
    </style>

    <div id="entete">
        <nav style="display: flex; justify-content: center">
            <img class="image" src="/image/LOGO__2_-removebg-preview.png">
            <a class="liens" href="/apropos">A propos de Veliko</a>
            <a class="liens"href="/">Map</a>
            <a class="liens" href="#" >Contacter Veliko</a>
            <a class="liens" href="/login">Se connecter</a>
        </nav>
    </div>
    <div id="map"></div>

    <!-- Fichiers CSS pour Leaflet et MarkerCluster -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <link rel="stylesheet" type="text/css"
          href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css"/>
    <link rel="stylesheet" type="text/css"
          href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css"/>

    <!-- Fichiers Javascript pour Leaflet et MarkerCluster -->
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin=""></script>
    <script type='text/javascript'
            src='https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js'></script>

    <script type="text/javascript">
        // On initialise la latitude et la longitude de Paris (centre de la carte)
        var lat = 48.852969;
        var lon = 2.349903;
        var macarte = null;
        var markerClusters; // Servira à stocker les groupes de marqueurs

        //on personnalise le marqueur
        var icone = L.icon({
            iconUrl:"image/icons8-localisation-de-l'utilisateur-100.png",
            iconSize:[50,50],
            iconAnchor:[25,50],
            popupAnchor:[0,-50]
        })
        var icone1 = L.icon({
            iconUrl:"image/imageMarker.png_1-removebg-preview.png",
            iconSize:[50,50],
            iconAnchor:[25,50],
            popupAnchor:[0,-50]
        })

        //logo
        // Fonction d'initialisation de la carte
        function initMap() {
            macarte = L.map('map').setView([lat, lon], 11);
            markerClusters = L.markerClusterGroup(); // Nous initialisons les groupes de marqueurs

            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 1,
                maxZoom: 20
            }).addTo(macarte);

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var lat = position.coords.latitude;
                    var lon = position.coords.longitude;
                    L.marker([lat, lon],{icon: icone}).addTo(macarte);
                }, function (error) {
                    console.log("Erreur lors de la récupération de la position : ", error);
                });
            } else {
                console.log("La géolocalisation n'est pas supportée par ce navigateur.");
            }

            {% for station in stationData %}
            var marker = L.marker([{{ station.lat }}, {{ station.lon }}],{icon:icone1});
            marker.bindPopup("Nom station : {{ station.nom }}" +
                "<br> Nombre de vélos disponibles : {{ station.numBikesAvailable }}" +
                "<br> Vélo Mécanique : {{ station.veloMecanique }}" +
                "<br> Vélo Électrique : {{ station.veloElectrique }}");
            markerClusters.addLayer(marker);
            {% endfor %}

            macarte.addLayer(markerClusters);
        }

        window.onload = function () {
            initMap();
        };
    </script>
{% endblock %}
