{% extends "base.html.twig" %}

{% block title %}{{ titre }}{% endblock %}

{% block content %}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            background-color: #fff;
            padding: 10px 20px;
            border-bottom: 2px solid #e0e0e0;
        }

        .navbar a {
            text-decoration: none;
            color: #333;
            padding: 10px;
            font-size: 14px;
        }

        .navbar a:hover {
            color: #4CAF50;
        }

        .navbar-right {
            display: flex;
            align-items: center;
        }

        .social-icons img {
            width: 20px;
            height: 20px;
            margin-left: 10px;
        }

        .connect-button, .signup-button {
            background-color: #0071c5;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            margin-left: 10px;
        }

        .connect-button:hover, .signup-button:hover {
            background-color: #005f99;
        }

        .map-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #map {
            width: 100%;
            height: 700px;
        }

        .signup-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .signup-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .signup-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .signup-container button {
            width: 100%;
            padding: 10px;
            background-color: #0071c5;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .image
        {
            width: 100px;
            height: auto;
            padding-bottom: 10px;
        }
        .signup-container button:hover {
            background-color: #005f99;
        }
    </style>

    <div class="navbar">
        <div class="navbar-left">
            <img class="image" src="image/image_no_white_background.png">
            <a href="/apropos">A propos de Veliko</a>
            <a href="/">Map</a>
            <a href="#">Contacter Veliko</a>

        </div>
        <div class="navbar-right">
            <button class="connect-button">Se connecter</button>
        </div>
    </div>

    <div class="map-container">
        <div id="map"></div>
    </div>

    <!-- Fichiers CSS pour Leaflet et MarkerCluster -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <link rel="stylesheet" type="text/css"
          href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css"/>
    <link rel="stylesheet" type="text/css"
          href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css"/>

    <!-- Fichiers Javascript pour Leaflet et MarkerCluster -->
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin=""></script>
    <script type='text/javascript'
            src='https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js'></script>

    <script type="text/javascript">
        var lat = 48.852969;
        var lon = 2.349903;
        var macarte = null;
        var markerClusters; // Servira à stocker les groupes de marqueurs

        //on personnalise le marqueur
        var icone = L.icon({
            iconUrl:"image/icons8-localisation-de-l'utilisateur-100.png",
            iconSize:[50,50],
            iconAnchor:[25,50],
            popupAnchor:[0,-50]
        })
        var icone1 = L.icon({
            iconUrl:"image/imageMarker.png_1-removebg-preview.png",
            iconSize:[50,50],
            iconAnchor:[25,50],
            popupAnchor:[0,-50]
        })

        function initMap() {
            macarte = L.map('map').setView([lat, lon], 11);
            markerClusters = L.markerClusterGroup();

            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 1,
                maxZoom: 20
            }).addTo(macarte);

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var lat = position.coords.latitude;
                    var lon = position.coords.longitude;
                     var userMarker = L.marker([lat, lon],{icon: icone}).addTo(macarte);
                    userMarker.bindPopup("vous etes ici ! ");

                }, function (error) {
                    console.log("Erreur lors de la récupération de la position : ", error);
                });
            } else {
                console.log("La géolocalisation n'est pas supportée par ce navigateur.");
            }


            {% for station in stationData %}
            var marker = L.marker([{{ station.lat }}, {{ station.lon }}],{icon:icone1});
            marker.bindPopup("Nom station : {{ station.nom }}" +
                "<br> Nombre de vélos disponibles : {{ station.numBikesAvailable }}" +
                "<br> Vélo Mécanique : {{ station.veloMecanique }}" +
                "<br> Vélo Électrique : {{ station.veloElectrique }}");
            markerClusters.addLayer(marker);
            {% endfor %}

            macarte.addLayer(markerClusters);
        }

        window.onload = function () {
            initMap();
        };

    </script>
{% endblock %}

