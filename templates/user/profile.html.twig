{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.prenom }} {{ app.user.nom }} :{% endblock %}

{% block body %}
    <style>
        .container {
            margin: 30px auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 900px;
        }

        .content {
            display: flex; /* Utilisation de Flexbox pour aligner les éléments horizontalement */
            justify-content: center; /* Centrer les éléments horizontalement */
            align-items: center; /* Centrer les éléments verticalement */
            flex-wrap: wrap; /* Permet aux éléments de se réorganiser sur plusieurs lignes si nécessaire */
            height: 90vh; /* Utiliser toute la hauteur de la page */
            padding: 20px;
            box-sizing: border-box;
            background: url('{{ asset('image/velo-cyclisme-cyclistes.webp') }}') center center no-repeat; /* L'image en fond */
            background-size: cover; /* L'image prend toute la taille du conteneur */
        }
        .text{
            font-size: 20px;

        }
    </style>
    <div class="content">
        <div class="container">
            <div class="col-xs4"><h3>Profil de {{ app.user.prenom }} {{ app.user.nom }} :</h3></div>
            {# Affichage des messages flash #}
            {% for message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="grix xs2">

                <div class="col-xs1 text">Email :</div>
                <div class="col-xs3">{{ app.user.email }}</div>
                <div class="col-xs1 text">Nom :</div>
                <div class="col-xs3">{{ app.user.nom }}</div>
                <div class="col-xs1 text">Prénom :</div>
                <div class="col-xs3">{{ app.user.prenom }}</div>
                <div class="col-xs1 text">Adresse:</div>
                <div class="col-xs3">{{ app.user.adresse }}</div>
                <div class="col-xs1 text">Ville :</div>
                <div class="col-xs3">{{ app.user.ville }}</div>
                <div class="col-xs1 text">Code Postal :</div>
                <div class="col-xs3">{{ app.user.codePostal }}</div>
                <br>
                <div class="col-xs4">
                    <a href="{{ path('user.edit', { 'id': app.user.id }) }}" class="connect-button btn btn-primary">Modifier</a>
                    <a href="{{ path('user.password', {'id': app.user.id}) }}" class="connect-button btn btn-primary">Modifier
                        Mot de passe</a>
                    <br><br>
                    <form action="{{ path('user.deleteConfirmation', { 'id': app.user.id }) }}">
                        <button type="submit" class="btn btn-danger">Supprimer mon compte</button>
                    </form>
                </div>
                <br>
            </div>
        </div>
    </div>
{% endblock %}
