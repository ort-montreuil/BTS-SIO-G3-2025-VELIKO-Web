{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <style>
        .content {
            display: flex; /* Utilisation de Flexbox pour aligner les éléments horizontalement */
            justify-content: center; /* Centrer les éléments horizontalement */
            align-items: center; /* Centrer les éléments verticalement */
            flex-wrap: wrap; /* Permet aux éléments de se réorganiser sur plusieurs lignes si nécessaire */
            height: 95vh; /* Utiliser toute la hauteur de la page */
            padding: 20px;
            box-sizing: border-box;
            background: url('{{ asset('image/velo-cyclisme-cyclistes.webp') }}') center center no-repeat; /* L'image en fond */
            background-size: cover; /* L'image prend toute la taille du conteneur */
        }

        .container {
            margin: 40px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 900px;
        }
        .titre{
            color: #007bff;            /* Couleur bleue */
            text-align: center;        /* Centrer le texte */
            font-weight: bold;         /* Mettre le texte en gras */
            font-size: 36px;
            font-family:'Poppins'

        }
        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"], input[type="password"], input[type="email"], input[type="date"], input[type="number"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .error {
            color: red;
        }

        .signup a {
            color: #007bff;
            text-decoration: none;
        }

        /* Pour séparer les champs en deux colonnes */
        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

        .form-row .form-group {
            flex: 1;
        }

        .form-row .form-group:nth-child(2) {
            margin-left: 20px; /* Ajoute un peu d'espace entre les deux colonnes */
        }
        .form-check {
            display: flex;
            align-items: center; /* Aligne verticalement la case et le texte */
            gap: 10px; /* Ajoute un espace entre la case et le texte */
        }

        .form-check-label {
            margin-bottom: 0; /* Supprime l'espacement vertical par défaut */
        }



    </style>

    <div class="content">
        <div class="container">
            <h1 class="mb-4 titre">S'inscrire :</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <!-- Formulaire divisé en deux colonnes -->
            <div class="form-row">
                <div class="form-group">
                    {{ form_row(registrationForm.email, {
                        'attr': {'class': 'form-control'},
                        'label': 'Email'
                    }) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.adresse, {
                        'attr': {'class': 'form-control'},
                        'label': 'Adresse'
                    }) }}
                </div>



            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_row(registrationForm.nom, {
                        'attr': {'class': 'form-control'},
                        'label': 'Nom'
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.date_naissance, {
                        'attr': {'class': 'form-control'},
                        'label': 'Date de Naissance'
                    }) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_row(registrationForm.prenom, {
                        'attr': {'class': 'form-control'},
                        'label': 'Prénom'
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.codePostal, {
                        'attr': {'class': 'form-control'},
                        'label': 'Code Postal'
                    }) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_row(registrationForm.ville, {
                        'attr': {'class': 'form-control'},
                        'label': 'Ville'
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.password, {
                        'attr': {'class': 'form-control'},
                        'label': 'Mot de Passe'
                    }) }}
                </div>
            </div>

            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
