{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1 class="mb-4">S'inscrire :</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_row(registrationForm.email, {
            'attr': {'class': 'form-control'},
            'label': 'Email'
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(registrationForm.nom, {
            'attr': {'class': 'form-control'},
            'label': 'Nom'
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(registrationForm.prenom, {
            'attr': {'class': 'form-control'},
            'label': 'Pr√©nom'
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(registrationForm.date_naissance, {
            'attr': {'class': 'form-control'},
            'label': 'Date de Naissance',
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(registrationForm.adresse, {
            'attr': {'class': 'form-control'},
            'label': 'Adresse'
        }) }}
    </div>


    <div class="mb-3">
        {{ form_row(registrationForm.ville, {
            'attr': {'class': 'form-control'},
            'label': 'Ville'
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(registrationForm.codePostal, {
            'attr': {'class': 'form-control'},
            'label': 'Code Postal'
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(registrationForm.password, {
            'attr': {'class': 'form-control'},
            'label': 'Mot de Passe'
        }) }}
    </div>


    <div class="mb-3 form-check">
        {{ form_row(registrationForm.agreeTerms, {
            'attr': {'class': 'form-check-input'},
            'label': 'J\'accepte les conditions d\'utilisation',
            'label_attr': {'class': 'form-check-label'}
        }) }}
    </div>

    <button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>

    {{ form_end(registrationForm) }}

{% endblock %}
